<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"

		android:layout_marginBottom="8dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"

		android:orientation="vertical"
		app:cardCornerRadius="4dp"
		app:cardElevation="2dp">

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<ImageView
				android:id="@+id/imgUser"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_alignParentTop="true"
				android:padding="8dp"/>

		<RelativeLayout
				android:id="@+id/tweet_detail_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_toEndOf="@+id/imgUser"
				android:layout_toRightOf="@+id/imgUser"
				android:padding="8dp">

			<TextView
					android:id="@+id/tv_tweet_username"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingBottom="4dp"
					android:text="asdasd"
					android:textColor="@color/primary_text"
					android:textSize="16sp"
					android:textStyle="bold"/>

			<TextView
					android:id="@+id/tv_tweet_text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_below="@id/tv_tweet_username"
					android:paddingBottom="4dp"
					android:text="asdasd"
					android:textColor="@color/secondary_text"
					android:textSize="14sp"/>

			<TextView
					android:id="@+id/tv_tweet_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:layout_alignParentRight="true"
					android:drawableLeft="@drawable/ic_access_time_black_18dp"
					android:drawablePadding="2dp"
					android:gravity="center"
					android:maxLines="1"
					android:text="12pm"
					android:textColor="@color/divider"
					android:textSize="12sp"/>

			<ImageView
					android:layout_marginTop="4dp"
					android:layout_marginBottom="4dp"
					android:adjustViewBounds="true"
					android:layout_below="@id/tv_tweet_text"
					android:id="@+id/img_content"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>

			<TextView
					android:id="@+id/tv_retweetcount"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_alignParentStart="true"
					android:layout_below="@+id/img_content"
					android:layout_marginRight="16dp"
					android:drawableLeft="@drawable/ic_repeat_black_18dp"
					android:drawablePadding="2dp"
					android:gravity="center"
					android:maxLines="1"
					android:paddingRight="4dp"
					android:paddingTop="4dp"
					android:text="12pm"
					android:textColor="@color/secondary_text"
					android:textSize="12sp"/>

			<TextView
					android:id="@+id/tv_favcount"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/img_content"
					android:layout_toEndOf="@+id/tv_retweetcount"
					android:layout_toRightOf="@+id/tv_retweetcount"
					android:drawableLeft="@drawable/ic_favorite_border_black_18dp"
					android:drawablePadding="2dp"
					android:gravity="center"
					android:maxLines="1"
					android:paddingRight="4dp"
					android:paddingTop="4dp"
					android:text="12pm"
					android:textColor="@color/secondary_text"
					android:textSize="12sp"/>
		</RelativeLayout>

	</RelativeLayout>

</android.support.v7.widget.CardView>